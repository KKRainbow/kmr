{
  "mapBucket": {
    "bucketType": "filesystem",
    "config": {
      "directory": "/"
    }
  },
  "interBucket": {
    "bucketType": "filesystem",
    "config": {
      "directory": "/tmp/"
    }
  },
  "reduceBucket": {
    "bucketType": "filesystem",
    "config": {
      "directory": "/tmp/"
    }
  },
  "workerDesc": {
    "volumeMounts": [
      {
        "name": "cephfs",
        "mountPath": "/cephfs"
      }
    ],
    "volumes": [
      {
        "name": "cephhfs",
        "hostPath": {
          "path": "/mnt/cephfs"
        }
      }
    ]
  },
  "nWorker": 2,
  "image": "kmr",
  "command": [
    "go",
    "run",
    "/go/src/github.com/naturali/kmr/examples/wordcount/main.go"
  ],
  "map": {
    "readerType": "textstream",
    "objects": [
      "/etc/passwd"
    ]
  },
  "reduce": {
    "nReduce": 1
  }
}
